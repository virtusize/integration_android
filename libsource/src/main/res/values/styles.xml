<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/virtusizeBlack</item>
        <item name="colorPrimary">@color/virtusizeBlack</item>

        <!-- Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/virtusizeWhite</item>
    </style>

    <style name="VirtusizeDialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Virtusize Button Default TextAppearance -->
    <style name="VirtusizeButtonTextAppearance">
        <item name="android:textColor">@color/virtusizeWhite</item>
        <item name="android:textSize">@dimen/virtusize_button_textSize</item>
    </style>

    <style name="VirtusizeInPageButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:drawableEnd">@drawable/ic_arrow_right_black</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right_black</item>
        <item name="android:paddingStart">@dimen/virtusize_inpage_mini_button_padding</item>
        <item name="android:paddingLeft">@dimen/virtusize_inpage_mini_button_padding</item>
        <item name="android:paddingEnd">@dimen/virtusize_inpage_mini_button_padding</item>
        <item name="android:paddingRight">@dimen/virtusize_inpage_mini_button_padding</item>
        <item name="android:text">@string/virtusize_button_text</item>
        <item name="android:textColor">@color/color_gray_900</item>
    </style>

</resources>