<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VirtusizeButton">
        <attr name="virtusizeButtonStyle">
            <enum name="virtusize_black" value="0" />
            <enum name="virtusize_teal" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="VirtusizeInPageMini">
        <attr name="virtusizeInPageMiniStyle">
            <enum name="virtusize_black" value="0" />
            <enum name="virtusize_teal" value="1" />
        </attr>
        <attr name="inPageMiniBackgroundColor" format="color"/>
        <attr name="inPageMiniMessageTextSize" format="dimension"/>
        <attr name="inPageMiniButtonTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VirtusizeInPageStandard">
        <attr name="virtusizeInPageStandardStyle">
            <enum name="virtusize_black" value="0" />
            <enum name="virtusize_teal" value="1" />
        </attr>
        <attr name="inPageStandardButtonBackgroundColor" format="color"/>
        <attr name="inPageStandardHorizontalMargin" format="dimension"/>
        <attr name="inPageStandardMessageTextSize" format="dimension"/>
        <attr name="inPageStandardButtonTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VirtusizeProductImageView">
        <attr name="productImageType">
            <enum name="store_product" value="0" />
            <enum name="user_product" value="1" />
        </attr>
    </declare-styleable>
</resources>