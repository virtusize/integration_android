<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inpage_mini_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_900"
    android:orientation="vertical"
    android:paddingStart="@dimen/virtusizeDp8"
    android:paddingTop="@dimen/virtusize_inpage_mini_padding_vertical"
    android:paddingEnd="@dimen/virtusizeDp8"
    android:paddingBottom="@dimen/virtusize_inpage_mini_padding_vertical">

    <ImageView
        android:id="@+id/inpage_mini_vs_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/virtusize_inpage_mini_vs_icon_height"
        android:layout_marginEnd="@dimen/virtusize_inpage_mini_vs_icon_marginEnd"
        android:layout_marginRight="@dimen/virtusize_inpage_mini_vs_icon_marginEnd"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_vs_icon_black" />

    <TextView
        android:id="@+id/inpage_mini_text"
        style="@style/InPageMiniTextStyle"
        android:layout_toStartOf="@+id/inpage_mini_button"
        android:layout_toLeftOf="@+id/inpage_mini_button"
        android:layout_toEndOf="@+id/inpage_mini_vs_icon_image_view"
        android:layout_toRightOf="@+id/inpage_mini_vs_icon_image_view"
        android:textColor="@color/virtusizeWhite"
        tools:text="@string/inpage_default_text" />

    <com.virtusize.libsource.ui.DotsLoadingTextView
        android:id="@+id/inpage_mini_loading_text"
        style="@style/InPageMiniTextStyle"
        android:layout_toStartOf="@+id/inpage_mini_button"
        android:layout_toLeftOf="@+id/inpage_mini_button"
        android:layout_toEndOf="@+id/inpage_mini_vs_icon_image_view"
        android:layout_toRightOf="@+id/inpage_mini_vs_icon_image_view"
        android:textColor="@color/color_gray_900"
        tools:text="@string/inpage_mini_loading_text" />

    <Button
        android:id="@+id/inpage_mini_button"
        style="@style/VirtusizeInPageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/virtusize_inpage_mini_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/virtusize_inpage_mini_margin_between_message_button"
        android:layout_marginLeft="@dimen/virtusize_inpage_mini_margin_between_message_button"
        android:background="@drawable/button_background_white"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:textSize="@dimen/virtusize_inpage_button_textSize" />

</RelativeLayout>